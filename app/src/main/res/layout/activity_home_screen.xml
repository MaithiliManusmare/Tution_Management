<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeScreenActivity">
    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/dark_bg_color"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="58dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/hiiTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView"
            android:text="@string/hi_amin"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hiiTv"
            android:layout_alignStart="@id/hiiTv"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:text="@string/welcome_back"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />


        <LinearLayout
            android:id="@+id/columnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/imageView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/light_yellow_bg_color"
                android:background="@drawable/rounded_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/car"
                    android:paddingBottom="3dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/totalVehicleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/dark_text_color"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:textColor="@color/dark_text_color"
                    android:text="@string/total_vehicles" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:backgroundTint="@color/light_blue_bg_color"
                android:background="@drawable/rounded_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ev_image"
                    android:paddingBottom="3dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/totalEvTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/dark_text_color"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="2300" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:textColor="@color/dark_text_color"
                    android:text="@string/total_ev" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLayout">

        <TextView
            android:id="@+id/listTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Inventory List"
            android:textColor="@color/dark_text_color"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:textSize="14dp"/>
        
        <View
            android:layout_width="150dp"
            android:layout_height="0.5px"
            android:background="@color/view_color"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true" />
        
        <TextView
            android:id="@+id/filterTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:drawableStart="@drawable/outline_filter_alt_24"
            android:background="@drawable/rounded_border_bg"
            android:layout_below="@+id/listTitleTv"
            android:textColor="@color/dark_text_color"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            />

        <include
            android:id="@+id/recyclerHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/item_vehicle_header"
            android:layout_below="@+id/filterTv"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_below="@+id/recyclerHeader"
            android:layout_width="match_parent"
            android:clipToOutline="true"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <TextView
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Vehicle"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:padding="15dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:background="@drawable/round_blue_background"
        android:drawableLeft="@drawable/add_icon"
        android:drawablePadding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>